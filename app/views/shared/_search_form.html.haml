#form-area-container<
  #form-area<>
    #title-container
      #title
        Search to see all cleaners in your area
    #form-container
      %form
        #search-box>
          = text_field_tag 'search', "Postcode", :onfocus => 'if (this.value == "Postcode") this.value = ""'
        #submit
          = render :partial => 'shared/button', :locals => {:text => "Search", :black => true}
      #text>
        #example
          Your postcode or area, 
          %br
          e.g. W2 1TT, N1 or Westminster
