.cleaner
  .photo>
    %img{:src => cleaner.photo.url(:thumb)}
  .details>
    %h2.name      
      = link_to cleaner.first_name, :controller => "cleaners", :action => "show", :id => cleaner.id
    .stats
      .jobs-done
        %a{:href => '#'}
          5 Jobs Done
      .reviews
        %a{:href => '#'}
          2 Reviews
    .introduction
      = cleaner.description
  = render :partial => 'shared/booking', :locals => {:cleaner => cleaner}