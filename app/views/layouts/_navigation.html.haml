#navigation<
  = image_tag 'navigation-border-left.png'
  #links>
    - if current_user
      #welcome-line
        Welcome,
        - if current_user.client?
          #{current_user.owner.first_name}!
        - else
          #profile-link
            #{link_to current_user.owner.first_name, cleaner_url(current_user.owner)}!
    - navigation_elements.each do |element|
      = navigational_link element
      = '|' unless element == navigation_elements.last
  = image_tag 'navigation-border-right.png'